<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iteso.sesion13_scrollabletab.tools.ActivityItem"
   >

    <LinearLayout
        android:id="@+id/acitvity_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/activity_item_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/images">
        </Spinner>

        <EditText
            android:id="@+id/activity_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/itemTitle"/>
        <Spinner
            android:id="@+id/activity_item_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>
        <Spinner
            android:id="@+id/activity_item_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

    </LinearLayout>

    <Button
        android:id="@+id/activity_item_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        />
</LinearLayout>
